{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["mcp-server.ts", "lib/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/__tests__/**"]
}
